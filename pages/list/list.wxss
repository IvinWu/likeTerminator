/* pages/list/list.wxss */
.header {
    background: url("/img/headerBg.png") repeat;
    position: relative;
    height: 200px;
    margin-bottom: 70px;
}
.nickName {
    position: absolute;
    bottom: 10rpx;
    right: 240rpx;
    color: #ffffff;
    font-size: 16px;
    font-family: '微软雅黑';
    font-weight: bold;
}
.avatar {
    width: 160rpx;
    height: 160rpx;
    position: absolute;
    right: 20px;
    bottom: -60rpx;
    border: 2px #ffffff solid;
}
.momentList {
    display: flex;
    padding: 20px;
}
.momentTime {
    width: 150rpx;
    font-family: '黑体';
}
.momentDay {
    font-weight: bold;
    font-size: 30px;
}
.momentMonth {
    font-weight: bold;
    font-size: 14px;
}
.momentConent {
    flex: 1;
    display: flex
}
.momentImg {
    width: 150rpx;
    height: 150rpx;
    margin-right: 5px;
}
.momentText {
    flex: 1;
    font-family: '微软雅黑';
    font-size: 14px;
    height: 150rpx;
    width: 200rpx;
    overflow-y: hidden;
    word-wrap:break-word;
}